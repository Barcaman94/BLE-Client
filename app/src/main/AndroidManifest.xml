<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BleClient"
        tools:targetApi="31" >
        <activity
            android:name=".OthersActivity"
            android:exported="false"
            android:label="OthersActivity"
            android:theme="@style/Theme.BleClient"/>
        <activity
            android:name=".ShiftActivity"
            android:exported="false"
            android:label="ShiftActivity"
            android:theme="@style/Theme.BleClient"/>
        <activity
            android:name=".ReversalActivity"
            android:exported="false"
            android:label="ReversalActivity"
            android:theme="@style/Theme.BleClient" />
        <activity
            android:name=".CashoutActivity"
            android:exported="false"
            android:label="CashoutActivity"
            android:theme="@style/Theme.BleClient" />
        <activity
            android:name=".ReportActivity"
            android:exported="false"
            android:label="ReportActivity"
            android:theme="@style/Theme.BleClient" />
        <activity
            android:name=".PaymentActivity"
            android:exported="false"
            android:label="@string/title_activity_payment"
            android:theme="@style/Theme.BleClient" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BleClient" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>